{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "useNx": true,
  "packages": [
    "packages/*",
    "lab/*",
    "libs/*",
    "docs"
  ],
  "version": "0.3.2",
  "command": {
    "version": {
      "message": "chore(release): %s"
    },
    "publish": {
      "conventionalCommits": true,
      "registry": "https://npm.pkg.github.com",
      "ignoreChanges": [
        ".pnp.cjs",
        ".yarn.lock",
        "*.md"
      ]
    }
  }
}
