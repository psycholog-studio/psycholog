{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "./",
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "declaration": true,
    "noEmit": false,
    "composite": true,
  },
  "exclude": ["*.test.ts", "*.test.tsx", "*.stories.tsx", "**/build", "node_modules"]
}
