{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react",
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "declaration": true,
    "noEmit": false,
    "types": [],
    "sourceMap": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "baseUrl": "./",
    "paths": {
      "@psycholog-studio/ui": ["./packages/ui/build"],
      "@psycholog-studio/ui/*": ["./packages/ui/build/*"],
      "@psycholog-studio/scenes": ["./packages/scenes/build"],
      "@psycholog-studio/scenes/*": ["./packages/scenes/build/*"],
      "@psycholog-studio/utils": ["./packages/utils/build"],
      "@psycholog-studio/utils/*": ["./packages/utils/build/*"]
    }
  },
  "exclude": ["**/*.test.ts", "**/*.test.tsx", "**/*.stories.tsx", "build", "node_modules", "./scripts"]
}
