{
  "compilerOptions": {
    "declarationMap": true,
    "noEmitOnError": true,

    "jsx": "react-jsx",
    "target": "es2022",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "declaration": true,
    "noEmit": false,
    "types": [],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "baseUrl": ".",
    "sourceMap": true,
    "module": "esnext",
    
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noPropertyAccessFromIndexSignature": true,
    "noFallthroughCasesInSwitch": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipDefaultLibCheck": true,

    "paths": {
      "@psycholog-studio/base": ["./packages/base/build"],
      "@psycholog-studio/base/*": ["./packages/base/build/*"],
      "@psycholog-studio/ui": ["./packages/ui/build"],
      "@psycholog-studio/ui/*": ["./packages/ui/build/*"],
      "@psycholog-studio/scenes": ["./packages/scenes/build"],
      "@psycholog-studio/scenes/*": ["./packages/scenes/build/*"],
      "@psycholog-studio/utils": ["./packages/utils/build"],
      "@psycholog-studio/utils/*": ["./packages/utils/build/*"]
    }
  },
  "exclude": ["**/*.test.ts", "**/*.test.tsx", "**/*.stories.tsx", "node_modules", "./scripts", "dist"]
}
